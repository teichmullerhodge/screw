{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "screw",
  "version": "0.1.0",
  "identifier": "com.hodge.screw",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "screw",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["resources/templates/**/*"],
    "icon": [
      "icons/icon-16.png",
      "icons/icon-32.png",
      "icons/icon-48.png",
      "icons/icon-256.png",
      "icons/icon.ico"
    ]
  }
}
